<resources>
    <dimen name="row_height">48dp</dimen>

    <style name="treeViewListStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@android:color/white</item>
        <item name="android:divider">@drawable/divider</item>
    </style>

    <style name="TextAppearance.Import.Entity" parent="@style/TextAppearance.Roboto.Bold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="TextAppearance.Data.Conflict" parent="@style/TextAppearance.Roboto.Bold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="TextAppearance.Data.File.Header" parent="@style/TextAppearance.Roboto.Bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/e_gray_text_medium</item>
    </style>

    <style name="TextAppearance.Data.File.Column" parent="@style/TextAppearance.Roboto.Bold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/e_gray_text_medium</item>
    </style>

    <style name="TextAppearance.ItemList" parent="TextAppearance.Roboto.Bold">
        <item name="android:textColor">@color/list_item_text_color</item>
        <item name="android:textSize">@dimen/list_item_large_text_size</item>
    </style>
    <style name="DmAppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">

        <!-- Android default styles -->
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>

        <!-- <item name="android:errorMessageBackground">@drawable/popup_inline_error</item> -->
        <!-- <item name="android:errorMessageAboveBackground">@drawable/popup_inline_error_above</item> -->

        <!-- Cnh widgets -->

        <!-- <item name="EditText">@style/EditText</item> -->
        <!-- <item name="EditTextBig">@style/EditTextBig</item> -->
        <!-- <item name="EditTextSmall">@style/EditTextSmall</item> -->

        <item name="InputField">@style/InputField</item>
        <item name="InputFieldBig">@style/InputFieldBig</item>
        <item name="InputFieldSmall">@style/InputFieldSmall</item>

        <item name="OnOff">@style/InputField</item>
        <item name="OnOffBig">@style/OnOffBig</item>
        <item name="OnOffSmall">@style/OnOffSmall</item>

        <item name="CheckBox">@style/CheckBox</item>

        <item name="InfoButton">@style/InfoButton</item>

        <item name="ProgressBar">@style/ProgressBar</item>

        <item name="SliderVerticalSmall_Right">@style/SliderVertical.Right</item>
        <item name="SliderVerticalBig_Right">@style/SliderVertical.Right</item>
        <item name="Slider_Interactive_With_Increment">@style/Slider.Interactive.With.Increment</item>

        <item name="Stepper">@style/Stepper</item>
        <item name="SpinnerStepper">@style/SpinnerStepper</item>

    </style>
    <style name="TextAppearance.deleteDialog.Big.InsideText" parent="@style/TextAppearance.CnhDialog.Big.InsideText">
        <item name="android:textStyle">normal</item>
    </style>

    <!--Import Conflict Dialog-->
    <style name="ImportConfigTableBase">
        <item name="android:layout_width">@dimen/import_conflict_dialog_table_cells_width</item>
        <item name="android:layout_height">@dimen/import_conflict_dialog_table_cells_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/import_conflict_dialog_field_text_color</item>
    </style>
    <style name="ImportConfigTableHeader" parent="ImportConfigTableBase">
        <item name="android:textSize">@dimen/import_conflict_dialog_table_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/data_conflict_header_cell</item>
    </style>
    <style name="ImportConfigTableBody" parent="ImportConfigTableBase">
        <item name="android:textSize">@dimen/import_conflict_dialog_table_body_text_size</item>
        <item name="android:background">@drawable/data_conflict_cell</item>
    </style>

    <style name="DataManagementTreeViewStyle">
        <item name="android:listSelector">@color/import_data_tree_list_selector_color</item>
        <item name="android:choiceMode">none</item>
        <item name="android:dividerHeight">@dimen/import_source_layout_tree_view_divider_height</item>
        <!-- CNH attributes -->
        <item name="indent_width">@dimen/import_source_layout_tree_view_cnh_indent_width</item>
        <item name="indicator_background">@android:color/transparent</item>
        <item name="indicator_gravity">center_vertical|right</item>
        <item name="src_collapsed">@drawable/data_tree_expand_active</item>
        <item name="src_expanded">@drawable/data_tree_collapse_active</item>
        <item name="collapsible">true</item>
        <item name="draw_line">true</item>
        <item name="line_color">@color/tree_line</item>
        <item name="line_width">@dimen/import_source_layout_tree_view_cnh_line_width</item>
    </style>
</resources>

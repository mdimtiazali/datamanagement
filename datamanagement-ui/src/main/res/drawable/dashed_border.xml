<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#ecedee" />
            <stroke
                    android:dashGap="@dimen/dash_gap"
                    android:dashWidth="@dimen/dash_length"
                    android:width="@dimen/dash_width"
                    android:color="@color/dash_border" />
            <padding
                    android:bottom="5dp"
                    android:left="5dp"
                    android:right="5dp"
                    android:top="5dp" />
        </shape>
    </item>
</layer-list>
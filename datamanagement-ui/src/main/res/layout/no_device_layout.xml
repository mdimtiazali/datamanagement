<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <TextView
            android:id="@+id/no_import_source_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_import_source"
            android:textColor="@color/stepper_value_text_color"
            android:textSize="@dimen/no_device_layout_text_view_text_size"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/no_device_layout_image_view_margin_top"
            android:src="@drawable/ic_no_source_detected"/>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/list_item_height"
              android:minHeight = "@dimen/list_item_height"
              android:paddingLeft="8dp"
              android:paddingTop="15dp"
              android:layout_gravity="center_horizontal"
              android:descendantFocusability="blocksDescendants">
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox"
            android:background="@drawable/extended_radio_button_selector"
            android:focusable="false"
            android:clickable="false" android:gravity="center"/>
    <ImageView android:layout_marginLeft="7dp"
               android:id="@+id/field_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              style="@style/TextAppearance.Roboto.Bold"
              android:textSize="18sp"
              android:textColor="@color/copy_title_text_color"
              android:layout_marginLeft="6dp"
              android:id="@+id/field_name"
              android:ellipsize="middle"
              android:layout_weight="1" android:gravity="center_vertical"/>
</LinearLayout>
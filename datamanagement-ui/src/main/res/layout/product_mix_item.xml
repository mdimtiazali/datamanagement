<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/product_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:padding="@dimen/list_item_padding">

    <TextView
            android:id="@+id/product_mix_name_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/TextAppearance.ItemList"
            android:text="@string/product_mix_title_product"
            android:layout_marginStart="13.25dp"
            android:layout_marginEnd="40.5dp" />

    <TextView
            android:id="@+id/product_mix_form_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/product_mix_name_text"
            android:layout_marginTop="@dimen/product_item_small_widget_margin"
            style="@style/TextAppearance.ItemList"
            android:text="@string/empty"
            android:layout_marginStart="5dp" />

    <TextView
            android:id="@+id/product_mix_rate_text"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/product_mix_form_text"
            android:layout_marginTop="@dimen/product_item_small_widget_margin"
            style="@style/TextAppearance.ItemList"
            android:text="@string/empty" />

    <ImageView
            android:id="@+id/product_mix_group_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:src="@drawable/arrow_up_expanded_productlist"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/empty" />

</RelativeLayout>